{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"types": ["vite/client"]
	},
	"include": ["frontend/src/**/*.ts", "frontend/src/**/*.svelte", "frontend/src/**/*.d.ts"]
}

